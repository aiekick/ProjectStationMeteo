[Unit]
Description=a http server who will give bme280 datas on url query
ConditionPathExists=/sys/class/i2c-dev/i2c-1

[Service]
User=root
WorkingDirectory=/usr/share/bme280Server
ExecStart=/usr/share/bme280Server/bme280Server -b /dev/i2c-1 -d /usr/share/bme280Server/database.db3 -t 60 -p 80
Restart=always

[Install]
WantedBy=sysinit.target

